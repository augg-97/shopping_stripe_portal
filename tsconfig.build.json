{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.build.tsbuildinfo"
  },
  "exclude": [
    "node_modules",
    "test/**/*",
    "**/*spec.ts",
    "eslint.config.ts",
    "dist"
  ],
  "include": ["src/**/*.ts", "typings/**/*.d.ts"]
}
